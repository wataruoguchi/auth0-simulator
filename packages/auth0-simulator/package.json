{
  "name": "@wataruoguchi/auth0-simulator",
  "version": "0.0.1",
  "description": "Auth0 simulator for E2E testing.",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist",
    "README.md",
    "Dockerfile",
    "test-rsa-key.pem"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsx src/start-simulator.ts",
    "start": "npm run build && node dist/start-simulator.js",
    "release": "semantic-release",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "auth0",
    "oauth2",
    "openid-connect",
    "oidc",
    "jwt",
    "simulator",
    "mock",
    "testing",
    "e2e",
    "cypress",
    "jwks"
  ],
  "author": "Wataru Oguchi <wataru.oguchi.0to1@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/wataruoguchi/auth0-simulator.git"
  },
  "bugs": {
    "url": "https://github.com/wataruoguchi/auth0-simulator/issues"
  },
  "homepage": "https://github.com/wataruoguchi/auth0-simulator#readme",
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@hono/node-server": "^1.19.1",
    "hono": "^4.9.6",
    "jsonwebtoken": "^9.0.2"
  },
  "devDependencies": {
    "@semantic-release/commit-analyzer": "^13.0.1",
    "@semantic-release/github": "^11.0.6",
    "@semantic-release/npm": "^12.0.2",
    "@semantic-release/release-notes-generator": "^14.1.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^24.3.1",
    "@vitest/coverage-v8": "^3.2.4",
    "semantic-release": "^24.2.8",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  },
  "peerDependencies": {
    "typescript": ">=4.9.0"
  }
}
