FROM cypress/included:13.15.0

WORKDIR /e2e

# Copy package files
COPY package*.json ./

# Install additional dependencies
RUN npm install

# Copy source code and config
COPY cypress/ ./cypress/
COPY cypress.config.ts ./
COPY tsconfig.json ./

# Set environment variables
ENV CYPRESS_baseUrl=http://localhost:3001
ENV CYPRESS_AUTH0_DOMAIN=http://localhost:4400

# Default command
CMD ["npx", "cypress", "run"]
